- title "Product"

%p
  %strong Name:
  = @product.name
%p
  %strong Value:
  = number_to_currency(@product.value)
%p
  %strong Color:
  = @product.color.name
%p
  %strong Finish:
  = @product.finish.name

%p
  = link_to "Edit", edit_product_path(@product)
  |
  = link_to "Destroy", @product, :confirm => 'Are you sure?', :method => :delete
  |
  = link_to "View All", products_path

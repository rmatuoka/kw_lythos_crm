.row
  - if current_user.has_role?(:administrator)
    .col-sm-12.top-space
      = form_for @bulletin do |f|    
        //%p.form-msg-danger Este campo estÃ¡ incorreto:
        = f.text_field :title, :class => "form-control", :placeholder => "Titulo"
        <br />
        %select.form-control
          %option Todos
          %option Supervisores
          %option Vendedores
        <br />
        = f.text_area :message, :class => "form-control", :placeholder => "Mensagem"
        <br />
      
        = submit_tag "Salvar", :class => "btn btn-default pull-right"
    
    
  .col-sm-12
    %h2 Comunicados
    .list-group
      - @bulletins.each do |b|
        %a.list-group-item
          %h4.list-group-item-heading 
            = b.title
            %span.list-group-date=b.created_at.strftime("%d.%m.%Y")
          %p.list-group-item-text{:id => b.id}
            =truncate(b.message)
            //= b.message

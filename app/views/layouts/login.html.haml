!!!
%html
  %head
    %title Lythos CRM - 2013
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    = stylesheet_link_tag "application.css", :media => "all"
    = stylesheet_link_tag "bootstrap"
    %link{:href => "http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800", :rel => "stylesheet", :type => "text/css"}/
    = csrf_meta_tags
  %body
    .header
      .col-xs-2.logo
        = link_to image_tag ("template/logo.jpg"), root_path
        
    .main-content
      .col-xs-12.col-md-12.container-main
        .row.main-box
          .col-xs-12
            = yield
        
        .row.footer
          .col-xs-12
            = link_to (image_tag("template/sato7.jpg"), "http://www.sato7.com.br", :target => "_blank")
            
            = link_to "PolÃ­tica de Privacidade", "#" , :class => "footer-links"
            = link_to "Termos de Uso", "#", :class => "footer-links"
            
  = javascript_include_tag "application"
  = javascript_include_tag "bootstrap"
  = javascript_include_tag "functions"
  = yield :scripts
  :javascript
    $(window).load(function() {
      $(window).resize();
    });

    $(window).resize(function() {
    	resize_layout();
    });